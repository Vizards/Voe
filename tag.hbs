{{!< default}}

<div class="tag" >
	<h1>{{tag.name}}</h1>
	<span>共{{pagination.total}}篇文章</span>
</div>

{{#foreach posts}}
	<section>
        {{#if image}}
            <div class="article-img">
                <img src="{{image}}" alt="pic" >
            </div>
        {{/if}}
        <div class="article-info">
		<h3>
			<a href="/#!/post/{{id}}">{{title}}</a>
		</h3>
		<div class="pub-info" >{{date format="YYYY/MM/DD"}}</div>
        </div>
		<article>
			{{meta_description}}
			<div class="read"><a href="/#!/post/{{id}}">阅读全文</a></div>
		</article>
	</section>
{{/foreach}}

{{pagination}}

