            $(document).ready(function(){ findLink(); });
            function findLink(){
                var self =null;
                var timer = setTimeout(findLink,200);
                $('link[rel*=stylesheet]').each(function(i){
                    var hrefStr = $(this).attr("href");
                    if(hrefStr.indexOf('styles/embed')> 0){
                        self = $(this);
                        self.remove();
                        clearTimeout(timer);
                    }
                });
            }
        </script>
